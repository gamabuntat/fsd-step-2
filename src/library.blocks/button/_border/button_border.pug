mixin buttonBorder(params)
    - let {disabled = false, sign = 'войти', header = false} = params
    if disabled
        .button.button_border.button_disabled
            button
                h3.h3 #{sign}
    else if header
        .button.header__button.button_border
            button
                h3.h3 #{sign}
    else
        .button.button_border
            button
                h3.h3 #{sign}
