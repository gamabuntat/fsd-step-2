mixin dropdown(params)
    - let {hover, example} = params
    .dropdown.container.container_direction-column
        h3.h3.dropdown__sign dropdown
        button.dropdown__button.container.container_justify-content-space-between.container_align-items-center
            span Сколько гостей
            img.dropdown__expand-icon(src=path + "library.blocks/dropdown/__expand-icon/expand-icon.svg", alt="")
        .dropdown__expand-list
            .dropdown__expand-items.container.container_justify-content-space-between.container_align-items-center
                h3.h3 взрослые
                .container.container_justify-content-space-between.container_align-items-center
                    button.dropdown__decrease-button.dropdown__decrease-button_disabled(type="button") -
                    .dropdown__counter.container.container_justify-content-center 0
                    button.dropdown__increase-button(type="button") +
            .dropdown__expand-items.container.container_justify-content-space-between.container_align-items-center
                h3.h3 дети
                .container.container_justify-content-space-between.container_align-items-center
                    button.dropdown__decrease-button.dropdown__decrease-button_disabled(type="button") -
                    .dropdown__counter.container.container_justify-content-center 0
                    button.dropdown__increase-button(type="button") +
            .dropdown__expand-items.container.container_justify-content-space-between.container_align-items-center
                h3.h3 младенцы
                .container.container_justify-content-space-between.container_align-items-center
                    button.dropdown__decrease-button.dropdown__decrease-button_disabled(type="button") -
                    .dropdown__counter.container.container_justify-content-center 0
                    button.dropdown__increase-button(type="button") +
            .dropdown__expand-items.container.container_justify-content-space-between.container_align-items-center.container_direction-row-reverse
                button.dropdown__cancel-button.dropdown__cancel-button_hidden
                    h3 очистить
                button.dropdown__submit-button
                    h3 применить
