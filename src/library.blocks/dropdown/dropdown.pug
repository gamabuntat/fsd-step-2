mixin dropdown(params)
    - let {sign = 'гости', subSign, narrow = false, onlyButton = false} = params
    if narrow
        .dropdown.dropdown_narrow.container.container_direction-column
            .container.container_justify-content-space-between
                h3.h3.dropdown__sign #{sign}
                if subSign
                    h3.h3.dropdown__sign.dropdown__sign_bright #{subSign}
            button.dropdown__button.dropdown__button_narrow.container.container_justify-content-space-between.container_align-items-center
                span 2 спальни, 2 кровати...
                span.dropdown__expand-icon
            if (!onlyButton)
                include ./__expand-list/_narrow/dropdown__expand-list_narrow.pug
    else
        .dropdown.container.container_direction-column
            .container.container_justify-content-space-between
                h3.h3.dropdown__sign #{sign}
                if subSign
                    h3.h3.dropdown__sign.dropdown__sign_bright #{subSign}
            button.dropdown__button.container.container_justify-content-space-between.container_align-items-center
                span Сколько гостей
                span.dropdown__expand-icon
            if (!onlyButton)
                include ./__expand-list/dropdown__expand-list.pug
