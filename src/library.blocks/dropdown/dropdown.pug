include ../svg-expand-icon/svg-expand-icon

mixin dropdown(params)
  - 
    const {sectionNames = []} = params

  .dropdown.js-dropdown
    button.dropdown__expand-button.js-dropdown__expand-button
      span.dropdown__signature Сколько гостей
      .dropdown__expand-icon
        +svg-expand-icon
    .dropdown__list
      each name in sectionNames
        .dropdown__list-section
          .dropdown__section-name #{name}
          button.dropdown__decrease-button.dropdown__decrease-button_disabled
            | -
          .dropdown__counter 0
          button.dropdown__increase-button
            | +
