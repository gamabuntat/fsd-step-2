include ../svg-forward-arrow/svg-forward-arrow

mixin cal()
  .cal
    button.cal__prev-month-btn
      +svg-forward-arrow
    .cal__month.js-cal__month July
    button.cal__next-month-btn
      +svg-forward-arrow
    .cal__year.js-cal__year 1998
    each day in ['Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб', 'Вс']
      span.cal__day-week #{day}
    .cal__table-container
      table.cal__main-table
        - for (let w = 0; w < 4; w++)
          tr.cal__week
            - for (let i = 0; i < 7; i++)
              td.cal__day
                button.cal__day-btn z1
