-
  function hihe() {
    const path = require('path');
    const fs = require('fs');
    const any = require('@library/any.json');
    if (JSON.parse(any)) {
      fs.writeFile('./src/library.blocks/any.json', 'hi', (err) => (err));
    }
  }

mixin head(params)
  -
    hihe()
    const {
      descript = "Toxin - hotel search service",
      keywords = "toxin search hotel rooms",
      title = "toxin page"
    } = params

  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(
      name="description" 
      content=descript
    )
    meta(name="keywords" content=keywords)
    link(
      rel="mask-icon"
      href=require("@src/favicons/mask-icon.svg").default 
      color="#BC9CFF"
    )
    link(
      rel="icon"
      type="image/jpg"
      href=require("@src/favicons/favicon-16x16.png").default
    )
    link(
      rel="icon"
      type="image/jpg"
      href=require("@src/favicons/favicon-32x32.png").default
    )
    title #{title}

