mixin svg-forward-arrow(fill, opacity = 0.6)
  - gradID = Math.round(Math.random() * 1e3)

  svg(
    width="18" 
    height="18" 
    viewBox="0 0 18 18" 
    fill="none" 
    opacity=opacity
    class="svg-forward-arrow"
    xmlns="http://www.w3.org/2000/svg"
  )

    defs
      linearGradient(
        id=gradID
        x1="9"
        y1="-13"
        x2="9"
        y2="31"
      )
        stop(stop-color="#BC9CFF")
        stop(offset="1" stop-color="#ff00ff")

    path(
      d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z" 
      fill=fill || `url(#${gradID})`
    )

