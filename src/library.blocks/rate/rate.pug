- let arr = []
mixin rate(params)
    - arr.push(rate)
    - let {checked = '1'} = params
    - let name = `rate${arr.length}`
    if checked == 1
        .rate
            input.rate__star(type="radio" name=name value="1" aria-label="ужасно" checked)
            input.rate__star(type="radio" name=name value="2" aria-label="терпимо")
            input.rate__star(type="radio" name=name value="3" aria-label="нормально")
            input.rate__star(type="radio" name=name value="4" aria-label="хорошо")
            input.rate__star(type="radio" name=name value="5" aria-label="отлично")
    else if checked == 2
        .rate
            input.rate__star(type="radio" name=name value="1" aria-label="ужасно")
            input.rate__star(type="radio" name=name value="2" aria-label="терпимо" checked)
            input.rate__star(type="radio" name=name value="3" aria-label="нормально")
            input.rate__star(type="radio" name=name value="4" aria-label="хорошо")
            input.rate__star(type="radio" name=name value="5" aria-label="отлично")
    else if checked == 3
        .rate
            input.rate__star(type="radio" name=name value="1" aria-label="ужасно")
            input.rate__star(type="radio" name=name value="2" aria-label="терпимо")
            input.rate__star(type="radio" name=name value="3" aria-label="нормально" checked)
            input.rate__star(type="radio" name=name value="4" aria-label="хорошо")
            input.rate__star(type="radio" name=name value="5" aria-label="отлично")
    else if checked == 4
        .rate
            input.rate__star(type="radio" name=name value="1" aria-label="ужасно")
            input.rate__star(type="radio" name=name value="2" aria-label="терпимо")
            input.rate__star(type="radio" name=name value="3" aria-label="нормально")
            input.rate__star(type="radio" name=name value="4" aria-label="хорошо" checked)
            input.rate__star(type="radio" name=name value="5" aria-label="отлично")
    else if checked = 5
        .rate
            input.rate__star(type="radio" name=name value="1" aria-label="ужасно")
            input.rate__star(type="radio" name=name value="2" aria-label="терпимо")
            input.rate__star(type="radio" name=name value="3" aria-label="нормально")
            input.rate__star(type="radio" name=name value="4" aria-label="хорошо")
            input.rate__star(type="radio" name=name value="5" aria-label="отлично" checked)
