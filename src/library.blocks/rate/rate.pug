include ../svg-star/svg-star

-
  function hashIt() {
    return 'rate' + Math.round(Math.random() * 1e2)
  }

mixin rate({checked = 1, name = hashIt(), attrs})
  label.rate
    - for (let v = 1; v < 6; v++)
      - const isChecked = checked === v
      input.rate__input&attributes({
        type: 'radio',
        name: name,
        value: v,
        checked: isChecked,
        ...attrs
      })
      span.rate__star
        +svg-star()
