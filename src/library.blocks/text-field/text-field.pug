mixin textFiled(params)
    - let {title, subTitle, hover, masked, placeholder = 'Email'} = params
    .container.container_direction-column.text-field
        .text-field__sign-container.container.container_justify-content-space-between
            if title
                h3.h3.text-field__sign #{title}
            else
            if subTitle
                h3.h3.text-field__sub-sign.font.font_montserrat-r #{subTitle}
            else
        if hover
            input.input.input_hover(type="text" placeholder="Email" value="This is pretty awesome")
        else if masked
            input.input(type="text" placeholder="ДД.ММ.ГГГГ")
        else
            input.input(type="text" placeholder=placeholder)
