-
  function hashIt() {
    return 'rate' + Math.round(Math.random() * 1e3)
  }

mixin rate({checked = 1, name = hashIt(), attrs})
  label.rate
    - for (let v = 1; v < 6; v++)
      - const isChecked = checked === v
      input.rate__input&attributes({
        type: 'radio',
        name: name,
        value: v,
        checked: isChecked,
        ...attrs
      })

