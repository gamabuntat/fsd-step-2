block vars
  include /watermark/watermark
  include /header/header
  include /footer/footer

  - 
    let isUikit = false
    const calHash = 'CAL_MAIN'
    const dropdownHash = 'DROPDOWN_MAIN'

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(
      name="description" 
      content=description || "toxin template"
    )
    meta(name="keywords" content=keywords || "toxin hotels aggregator")
    title= title || "toxin"
    link(
      rel="mask-icon"
      href=require("@src/favicons/mask-icon.svg") 
      color="#BC9CFF"
    )
    link(
      rel="icon"
      type="image/jpg"
      href=require("@src/favicons/favicon-16x16.png")
    )
    link(
      rel="icon"
      type="image/jpg"
      href=require("@src/favicons/favicon-32x32.png")
    )

  body
    unless isUikit
      +header({})
    block main
      if isUikit
        +watermark({})
    unless isUikit
      +footer({})

