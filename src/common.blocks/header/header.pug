include ../../common.blocks/header/__menu-item/header__menu-item_expandable

mixin header(params)
    - let {authorized = false} = params
    header.header
        a(href="#")
            img.logo.header__logo(src=path + "library.blocks/logo/logo.svg", alt="")
        ul.header__menu
            li
                a.header__menu-item(href="cards.html") О нас
            li
                +itemExpandable({})
            li
                a.header__menu-item(href="#") Вакансии
            li
                a.header__menu-item(href="#") Новости
            li
                +itemExpandable({title: ' Соглашения', number: 2})
            if !authorized
                li
                    +buttonBorder({sign: 'Войти', header: 1})
                li
                    +bigButton({sign: 'зарегистрироваться', header: 1})
            else
                li
                    .header__v-line
                li
                    a.header__menu-item(href="#") Юлий Цезарь
