- const path = '../../'
include ../../library.blocks/text-field/text-field.pug
include ../../library.blocks/dropdown/dropdown

doctype html
html.html(lang="ru")
    head
        meta(charset="UTF-8")
        title
    body.page.color-100
        img.watermark(src=path + "library.blocks/watermark/watermark.svg", alt="")
        .container.page__container
            .container.container_direction-column
                +textFiled({example: 'default'})
                +textFiled({example: 'hover / focus', hover: true})
                +textFiled({example: 'default', masked: true})
                include ../../library.blocks/date-dropdown/date-dropdown.pug
                include ../../library.blocks/filter-date-dropdown/filter-date-dropdown.pug
                include ../../library.blocks/sub-text-field/sub-text-field.pug
                +dropdown({narrow: true, expand: true})
                +dropdown({expand: true})
