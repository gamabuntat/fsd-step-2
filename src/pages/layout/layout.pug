block vars

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(
      name="description" 
      content=descript
    )
    meta(name="keywords" content=keywords)
    title #{title}
    link(
      rel="mask-icon"
      href=require("@src/favicons/mask-icon.svg").default 
      color="#BC9CFF"
    )
    link(
      rel="icon"
      type="image/jpg"
      href=require("@src/favicons/favicon-16x16.png").default
    )
    link(
      rel="icon"
      type="image/jpg"
      href=require("@src/favicons/favicon-32x32.png").default
    )

  body
    block main

